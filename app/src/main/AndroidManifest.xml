<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buildupplaybubba" >

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuildUpPlaybubba" >
        <activity
            android:name=".AddMealActivity"
            android:exported="false" />
        <activity
            android:name=".StepsActivity"
            android:exported="false"
            android:parentActivityName=".BrowseActivity" />
        <activity
            android:name=".AddSleepActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditJournalActivity"
            android:exported="false" />
        <activity
            android:name=".JournalEntryActivity"
            android:exported="false"
            android:noHistory="true"
            android:parentActivityName=".JournalActivity" />
        <activity
            android:name=".AddWorkoutActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BrowseActivity"
            android:exported="false" />
        <activity
            android:name=".JournalActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>